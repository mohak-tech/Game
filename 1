<body>
    <!-- Stats Display (Optional) -->
    <div class="stats-container" id="statsDisplay">
        Taps: <span id="tapCount">0</span>
    </div>

    <!-- TOP HALF: Result Display Area -->
    <div class="result-container">
        <h1 class="game-title">Seven Up – Seven – Seven Down</h1>
        <p class="game-subtitle">Tap anywhere to play</p>
        
        <div class="result-card" id="resultCard">
            <div class="result-display" id="resultDisplay">Ready</div>
        </div>
    </div>

    <!-- BOTTOM HALF: Play Button with Invisible Zones -->
    <div class="button-container">
        <!-- Visible WIDER button -->
        <button class="play-button" id="playButton">Tap to Play</button>
        
        <!-- Invisible overlay for zone detection -->
        <div class="click-overlay" id="clickOverlay"></div>
        
        <!-- Tap indicator (visual feedback) -->
        <div class="tap-indicator" id="tapIndicator"></div>
    </div>

    <script>
        // ===== GAME STATE =====
        let isProcessing = false;
        let autoResetTimer = null;
        let tapCount = 0;

        // ===== DOM ELEMENTS =====
        const resultDisplay = document.getElementById('resultDisplay');
        const resultCard = document.getElementById('resultCard');
        const clickOverlay = document.getElementById('clickOverlay');
        const playButton = document.getElementById('playButton');
        const tapIndicator = document.getElementById('tapIndicator');
        const tapCountDisplay = document.getElementById('tapCount');

        // ===== EVENT LISTENERS =====
        clickOverlay.addEventListener('click', handleClick);
        clickOverlay.addEventListener('touchstart', handleTouch, { passive: false });

        /**
         * Handle touch events (mobile)
         */
        function handleTouch(e) {
            e.preventDefault();
            if (e.touches && e.touches.length > 0) {
                const touch = e.touches[0];
                processClick(touch.clientX, touch.clientY);
            }
        }

        /**
         * Handle mouse clicks (desktop)
         */
        function handleClick(e) {
            processClick(e.clientX, e.clientY);
        }

        /**
         * Core game logic with enhanced visual feedback
         * @param {number} clickX - X coordinate of click/tap
         * @param {number} clickY - Y coordinate of click/tap
         */
        function processClick(clickX, clickY) {
            if (isProcessing) return;
            
            isProcessing = true;
            tapCount++;
            tapCountDisplay.textContent = tapCount;

            // Clear existing timer
            if (autoResetTimer) {
                clearTimeout(autoResetTimer);
            }

            // Visual feedback - show tap indicator
            showTapIndicator(clickX, clickY);

            // Disable button visually
            playButton.classList.add('disabled');

            // Calculate which zone was tapped
            const screenWidth = window.innerWidth;
            const leftZoneEnd = screenWidth / 3;
            const rightZoneStart = (screenWidth / 3) * 2;

            let result;

            if (clickX < leftZoneEnd) {
                result = 'Seven Down';
            } else if (clickX > rightZoneStart) {
                result = 'Seven Up';
            } else {
                result = 'Seven';
            }

            // Show calculating state
            resultDisplay.textContent = 'Calculating...';
            resultCard.classList.add('active');
            
            // Play sound
            playClickSound();

            // Show result after delay
            const delayTime = 600 + Math.random() * 400; // 600-1000ms
            
            setTimeout(() => {
                resultDisplay.textContent = result;
                resultCard.classList.add('pulse');
                
                // Remove pulse animation
                setTimeout(() => {
                    resultCard.classList.remove('pulse');
                }, 500);
                
                // Auto-reset after 3 seconds
                autoResetTimer = setTimeout(() => {
                    resetGame();
                }, 3000);
                
            }, delayTime);
        }

        /**
         * Show visual tap indicator at click position
         */
        function showTapIndicator(x, y) {
            tapIndicator.style.left = (x - 30) + 'px';
            tapIndicator.style.top = (y - 30) + 'px';
            tapIndicator.classList.add('show');
            
            setTimeout(() => {
                tapIndicator.classList.remove('show');
            }, 400);
        }

        /**
         * Reset game to initial state
         */
        function resetGame() {
            resultDisplay.textContent = 'Ready';
            resultCard.classList.remove('active');
            playButton.classList.remove('disabled');
            isProcessing = false;
        }

        /**
         * Enhanced click sound with better tone
         */
        function playClickSound() {
            try {
                const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();
                
                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);
                
                oscillator.frequency.value = 520; // More pleasant tone
                oscillator.type = 'sine';
                
                gainNode.gain.setValueAtTime(0.15, audioContext.currentTime);
                gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.15);
                
                oscillator.start(audioContext.currentTime);
                oscillator.stop(audioContext.currentTime + 0.15);
            } catch (e) {
                // Audio not supported - fail silently
            }
        }

        // ===== PREVENT UNWANTED INTERACTIONS =====
        document.addEventListener('contextmenu', (e) => e.preventDefault());
        document.addEventListener('selectstart', (e) => e.preventDefault());

        // ===== OPTIONAL: Save tap count to localStorage =====
        // Uncomment below to persist tap count across sessions
        /*
        window.addEventListener('load', () => {
            const savedCount = localStorage.getItem('tapCount');
            if (savedCount) {
                tapCount = parseInt(savedCount);
                tapCountDisplay.textContent = tapCount;
            }
        });

        window.addEventListener('beforeunload', () => {
            localStorage.setItem('tapCount', tapCount);
        });
        */
    </script>
</body>
